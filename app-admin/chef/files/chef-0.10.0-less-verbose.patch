From 1887e765421d729f64ce5511c667b5cf8dcb236f Mon Sep 17 00:00:00 2001
From: =?UTF-8?q?Benedikt=20B=C3=B6hm?= <bb@xnull.de>
Date: Wed, 29 Jun 2011 23:01:31 +0200
Subject: [PATCH] remove log messages that are way too verbose

---
 chef/lib/chef/client.rb                    |    2 +-
 chef/lib/chef/cookbook_version.rb          |    2 +-
 chef/lib/chef/provider/remote_directory.rb |    1 -
 chef/lib/chef/resource.rb                  |    2 +-
 4 files changed, 3 insertions(+), 4 deletions(-)

diff --git a/chef/lib/chef/client.rb b/chef/lib/chef/client.rb
index fe4c9a4..7fa468b 100644
--- a/chef/lib/chef/client.rb
+++ b/chef/lib/chef/client.rb
@@ -262,7 +262,7 @@ class Chef
       @expanded_run_list_with_versions = @run_list_expansion.recipes.with_version_constraints_strings
 
       Chef::Log.info("Run List is [#{@node.run_list}]")
-      Chef::Log.info("Run List expands to [#{@expanded_run_list_with_versions.join(', ')}]")
+      Chef::Log.debug("Run List expands to [#{@expanded_run_list_with_versions.join(', ')}]")
 
       @run_status = Chef::RunStatus.new(@node)
 
diff --git a/chef/lib/chef/cookbook_version.rb b/chef/lib/chef/cookbook_version.rb
index 117bb61..87f57f5 100644
--- a/chef/lib/chef/cookbook_version.rb
+++ b/chef/lib/chef/cookbook_version.rb
@@ -311,7 +311,7 @@ class Chef
     # === Returns
     # true:: Always returns true
     def self.sync_cookbooks(cookbook_hash)
-      Chef::Log.info("Loading cookbooks [#{cookbook_hash.keys.sort.join(', ')}]")
+      Chef::Log.debug("Loading cookbooks [#{cookbook_hash.keys.sort.join(', ')}]")
       Chef::Log.debug("Cookbooks detail: #{cookbook_hash.inspect}")
 
       clear_obsoleted_cookbooks(cookbook_hash)
diff --git a/chef/lib/chef/provider/remote_directory.rb b/chef/lib/chef/provider/remote_directory.rb
index 2fb25ca..c375a83 100644
--- a/chef/lib/chef/provider/remote_directory.rb
+++ b/chef/lib/chef/provider/remote_directory.rb
@@ -44,7 +44,6 @@ class Chef
           files_to_purge.delete(::File.join(@new_resource.path, cookbook_file_relative_path))
         end
         purge_unmanaged_files(files_to_purge)
-        Chef::Log.info("#{@new_resource} created")
         @new_resource.updated_by_last_action(true)
       end
 
diff --git a/chef/lib/chef/resource.rb b/chef/lib/chef/resource.rb
index b92f52c..08e5e52 100644
--- a/chef/lib/chef/resource.rb
+++ b/chef/lib/chef/resource.rb
@@ -385,7 +385,7 @@ F
     end
 
     def run_action(action)
-      Chef::Log.info("Processing #{self} action #{action} (#{defined_at})")
+      Chef::Log.debug("Processing #{self} action #{action} (#{defined_at})")
 
       # ensure that we don't leave @updated_by_last_action set to true
       # on accident
-- 
