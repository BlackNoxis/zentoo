# host & port for our listen socket
PORT=8080
HOST=$(hostname -f):${PORT}

# JVM options
JVM_OPTS="-Duser.timezone=UTC -Dfile.encoding=UTF-8 -Ddruid.host=$HOST -Ddruid.port=$PORT"

# main class
MAIN="com.metamx.druid.http.BrokerMain"

# build the classpath
CLASSPATH="/etc/druid:${CLASSPATH}"

for i in /usr/share/druid/lib/*.jar; do
	CLASSPATH="${i}:${CLASSPATH}"
done
